<div class="limiter">
	<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
		<div class="wrap-login100">
			<form action="/register" method="post" class="login100-form validate-form">
				<span class="login100-form-logo">
					<i class="zmdi zmdi-account-circle"></i>
				</span>

				<span class="login100-form-title p-b-34 p-t-27">
                    Créer un compte
				</span>
                <div>
                </div>
                <div class="wrap-input100 validate-input" data-validate = "Nom obligatoire">
					<input class="input100" type="text" name="name" id="name" placeholder="Nom complet">
					<span class="focus-input100" data-placeholder="&#xf207;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate = "Mail obligatoire">
					<input class="input100" type="email" name="email" id="email" placeholder="Adresse mail">
					<span class="focus-input100" data-placeholder="&#xf330;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Mot de passe obligatoire">
					<input class="input100" type="password" name="password" id="password" placeholder="Cr&eacute;er un mot de passe">
					<span class="focus-input100" data-placeholder="&#xf191;"></span>
				</div>

				<div class="container-login100-form-btn">
					<button type="submit" class="login100-form-btn">
						Reconnaître
					</button>
				</div>

				<div class="text-center p-t-40">
                    <a class="txt1" href="/login">Connexion</a> 
				</div>
               
			</form>
			</div>
	</div>
</div>
	

