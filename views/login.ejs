

<div class="limiter">
	<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
		<div class="wrap-login100">
			<form action="/login" method="post" class="login100-form validate-form">
				<span class="login100-form-logo">
					<i class="zmdi zmdi-tab"></i>
				</span>

				<span class="login100-form-title p-b-34 p-t-27">
						Se Connecter
				</span>
                <div>
                    <% if(messages.error){ %> 
                        <%= messages.error %> 
                    <% } %>
                </div>
				<div class="wrap-input100 validate-input" data-validate = "Mail Obligatoire">
					<input class="input100" type="email" name="email" id="email" placeholder="Adresse Mail">
					<span class="focus-input100" data-placeholder="&#xf330;"></span>
				</div>

				<div class="wrap-input100 validate-input" data-validate="Entrez un mot de passe">
					<input class="input100" type="password" name="password" id="password" placeholder="Mot de Passe">
					<span class="focus-input100" data-placeholder="&#xf191;"></span>
				</div>

				<div class="container-login100-form-btn">
					<button class="login100-form-btn">
						Connexion
					</button>
				</div>

				<div class="text-center p-t-40">
                    <a class="txt1" href="/register">Cr&eacute;er un compte</a> 
				</div>
                <div class="text-center p-t-0">
                    <a class="txt1" href="#">Mot de passe oubli&eacute;?</a>
				</div>
               
			</form>
			</div>
	</div>
</div>
	




